<?php

function inverterString($string):string {
    
    $tam = strlen($string); 
    $stringInvertida = '';   

    for ($i = $tam - 1; $i >= 0; $i--) {
        $stringInvertida .= $string[$i];
    }

    return $stringInvertida;
}

$string = "Oi, meu nome Ã© Laissy";

echo inverterString($string) . "\n";

